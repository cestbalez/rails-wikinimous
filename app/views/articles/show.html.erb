<div class="article">
  <h2><%= @article.title %></h2>
  <%= link_to "Edit post", edit_article_path(@article) %>
  <%= link_to "Delete post", article_path(@article),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this article" } %>
    <hr>
    <p><%= @article.content %></p>
</div>

